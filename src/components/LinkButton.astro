---
interface Props {
	href: string;
  ghost?: boolean;
}

const colours = Astro.props.ghost ? "border-atom-cyan border text-atom-cyan bg-atom-bg hover:bg-atom-purple hover:text-atom-bg hover:border-atom-purple active:bg-atom-purple active:text-atom-bg active:border-atom-purple" : "text-atom-bg bg-atom-cyan hover:bg-atom-purple active:bg-atom-purple";
---

<a href={Astro.props.href} class={`text-center font-mono text-base ${colours} py-2 px-6 transition-colors box-border`}>
  <slot />
</a>
